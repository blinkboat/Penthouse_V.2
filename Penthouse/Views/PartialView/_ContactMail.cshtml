<section class="section" id="contactmail">
    <div class="container" style="background-color:black;padding:25px">
      
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="home-title text-center">
                    <h2 class="home-title-title letter-spacing_4 text-uppercase"style="color:white">MESSAGE US</h2>
                </div>
            </div>
        </div>

        <div class="row vertical-content pt-2">
           
            <div class="col-lg-6">
                <div class="custom-form mt-4">
                    <div id="message"></div>
                    <form method="post" action="../PenthouseHome/MailAlert" name="contact-form" id="contact-form">

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group mt-3">
                                    <input name="name" id="name" type="text" class="form-control" placeholder="NAME*" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group mt-3">
                                    <input name="email" id="email" type="email" class="form-control" placeholder="E-MAIL*" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group mt-3">
                                    <input name="number" id="number" type="number" class="form-control" placeholder="TEL*" required>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group mt-3">
                                    <input name="prjname" id="prjname" type="text" class="form-control" placeholder="PROJECT NAME">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group mt-3">
                                    <textarea name="comments" id="comments" rows="5" class="form-control" placeholder="MESSAGE"></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="mt-3">
                                    <input type="submit" id="submit" name="send" class="submitBnt btn btn-md btn-dark-custom" value="SEND">
                                    <div id="simple-msg"></div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>